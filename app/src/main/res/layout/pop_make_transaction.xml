<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AccountCustomerActivity">

    <RelativeLayout
        android:id="@+id/text_title_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/image_transaction"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_transaction"
            android:tint="@color/defaultColorWhite"
            android:layout_margin="5dp"/>


        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type_transaction"
            android:textColor="@color/defaultColorWhite"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_toEndOf="@+id/image_transaction"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/transparence_button"
            android:text="@string/text_save"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/transaction_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title_transaction"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/spinner_type_owner_transaction_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img0"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_gender_symbols"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_type_owner_transaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img0"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelText="@string/text_title_owner_type"
                        app:smsp_multilineError="false"
                        app:smsp_hint="@string/text_choose_owner_type"
                        app:smsp_underlineSize="1dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/spinner_account_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_type_owner_transaction_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_type_owner_transaction_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_type_owner_transaction_group"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/img01"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_gender_symbols"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img01"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelText="@string/text_title_account"
                        app:smsp_multilineError="false"
                        app:smsp_hint="@string/text_choose_account"
                        app:smsp_underlineSize="1dp" />

                </RelativeLayout>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_full_name_recipient_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:iconSignifier="@drawable/ic_user"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark"
                    app:labelText="@string/text_enter_recipient_name"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_account_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_account_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_account_group">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_full_name_recipient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_birth_date_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_full_name_recipient_group"
                    app:layout_constraintStart_toStartOf="@+id/text_full_name_recipient_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_full_name_recipient_group"
                    app:labelText="@string/text_select_birth_date"
                    app:iconSignifier="@drawable/ic_date_range_black_24dp"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_birth_date_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:enabled="false"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <RelativeLayout
                    android:id="@+id/spinner_sex_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_birth_date_register_group"
                    app:layout_constraintStart_toStartOf="@+id/text_birth_date_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_birth_date_register_group">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_gender_symbols"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_sex_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img1"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelText="@string/text_title_sex"
                        app:smsp_multilineError="false"
                        app:smsp_hint="@string/text_choose_sex"
                        app:smsp_underlineSize="1dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/spinner_country_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_sex_register_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_sex_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_sex_register_group">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_country"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_country_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img2"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        android:spinnerMode="dialog"
                        app:smsp_floatingLabelText="@string/text_title_country"
                        app:smsp_hint="@string/text_choose_country"
                        app:smsp_multilineError="false"
                        app:smsp_underlineSize="1dp"
                        app:smsp_isSearchable="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/spinner_city_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_country_register_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_country_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_country_register_group">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_city"
                        android:backgroundTint="@color/colorPrimaryDark"/>


                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_city_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img3"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        android:spinnerMode="dialog"
                        app:smsp_floatingLabelText="@string/text_title_city"
                        app:smsp_hint="@string/text_choose_city"
                        app:smsp_multilineError="false"
                        app:smsp_underlineSize="1dp"
                        app:smsp_isSearchable="true"/>

                </RelativeLayout>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_address_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:iconSignifier="@drawable/ic_address"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark"
                    app:labelText="@string/text_enter_address"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_city_register_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_city_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_city_register_group">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_address_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_cni_number_register_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:iconSignifier="@drawable/ic_identification_documents"
                    app:labelText="Enter your CNI number"
                    app:layout_constraintEnd_toEndOf="@+id/text_address_register_group"
                    app:layout_constraintStart_toStartOf="@+id/text_address_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_address_register_group"
                    app:primaryColor="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_cni_number_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/colorPrimaryDark" />

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <RelativeLayout
                    android:id="@+id/spinner_code_phone_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_cni_number_register_group"
                    app:layout_constraintStart_toStartOf="@+id/text_cni_number_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_cni_number_register_group">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_voip_gateway"
                        android:backgroundTint="@color/colorPrimaryDark"/>

                    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                        android:id="@+id/spinner_code_phone_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/img6"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:spinnerMode="dialog"
                        app:smsp_isSearchable="true"
                        android:theme="@style/AppTheme"
                        app:smsp_arrowColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelColor="@color/colorPrimaryDark"
                        app:smsp_hintColor="@color/colorPrimaryDark"
                        app:smsp_itemColor="@color/colorPrimaryDark"
                        app:smsp_itemListColor="@color/defaultColorBlack"
                        app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                        app:smsp_itemListHintColor="@color/colorPrimaryDark"
                        app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                        app:smsp_underlineColor="@color/colorPrimaryDark"
                        app:smsp_floatingLabelText="@string/text_title_code_phone"
                        app:smsp_multilineError="false"
                        app:smsp_hint="@string/text_choose_code_phone"
                        app:smsp_underlineSize="1dp" />

                </RelativeLayout>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_phone_number_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/spinner_code_phone_register_group"
                    app:layout_constraintStart_toStartOf="@+id/spinner_code_phone_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_code_phone_register_group"
                    app:labelText="Enter your phone number"
                    app:iconSignifier="@drawable/ic_phone2"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_phone_number_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_password_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_phone_number_register_group"
                    app:layout_constraintStart_toStartOf="@+id/text_phone_number_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_phone_number_register_group"
                    app:labelText="Enter your password"
                    app:iconSignifier="@drawable/ic_password"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_password_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                    android:id="@+id/text_confirm_password_register_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/text_password_register_group"
                    app:layout_constraintStart_toStartOf="@+id/text_password_register_group"
                    app:layout_constraintTop_toBottomOf="@+id/text_password_register_group"
                    app:labelText="Confirm your password"
                    app:iconSignifier="@drawable/ic_password"
                    android:foregroundTint="@color/colorPrimaryDark"
                    app:secondaryColor="@color/colorPrimaryDark"
                    app:primaryColor="@color/colorPrimaryDark">

                    <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                        android:id="@+id/text_confirm_password_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/colorPrimaryDark"/>

                </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>