<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Views.Member.Activity.RegisterMemberPart2Activity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@drawable/transparence_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            android:background="@color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
                app:collapsedTitleGravity="start"
                app:expandedTitleGravity="bottom"
                app:title="@string/app_name"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_item_micro_finance"
                    android:src="@drawable/register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    app:layout_collapseMode="parallax"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/transparence_image"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    app:layout_collapseMode="pin"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:menu="@menu/return_menu"
                    app:navigationIcon="@drawable/logo_b"
                    android:paddingTop="18dp"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Now we are going to add content for app good look below collapsing toolbar -->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginBottom="38dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="60dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="30dp">

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_cni_number_register_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        app:iconSignifier="@drawable/ic_identification_documents"
                        android:foregroundTint="@color/defaultColorWhite"
                        app:secondaryColor="@color/defaultColorGray"
                        app:primaryColor="@color/defaultColorWhite"
                        app:labelText="Enter your CNI number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/text_cni_number_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/defaultColorWhite"/>

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                    <com.libRG.CustomTextView
                        android:id="@+id/text_link_cni_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="24dp"
                        android:text="Import your CNI copy"
                        android:drawableStart="@drawable/ic_identification_documents"
                        android:drawableTint="@color/defaultColorGrayOpacity"
                        android:textColor="@color/defaultColorGrayOpacity"
                        android:drawablePadding="10dp"
                        android:textSize="18sp"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/text_cni_number_register_group"
                        app:layout_constraintStart_toStartOf="@+id/text_cni_number_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/text_cni_number_register_group"
                        app:lib_setRadius="2dp"
                        app:lib_setRoundedBGColor="@color/defaultColorBlack_10"
                        app:lib_setRoundedBorderColor="@color/defaultColorBlack_10"
                        app:lib_setRoundedView="true"
                        app:lib_setShape="rectangle"
                        app:lib_setStrokeWidth="3dp" />

                    <com.theophrast.ui.widget.SquareImageView
                        android:id="@+id/image_cni_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/defaultColorWhite"
                        android:scaleType="fitXY"
                        android:src="@drawable/cni"
                        app:layout_constraintCircleRadius="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/text_link_cni_register_group"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/text_link_cni_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/text_link_cni_register_group" />

                    <com.libRG.CustomTextView
                        android:id="@+id/text_link_profil_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="24dp"
                        android:text="Edit your profile picture"
                        android:drawableStart="@drawable/ic_user"
                        android:drawableTint="@color/defaultColorGrayOpacity"
                        android:textColor="@color/defaultColorGrayOpacity"
                        android:drawablePadding="10dp"
                        android:textSize="18sp"
                        android:padding="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/image_cni_register"
                        app:layout_constraintStart_toStartOf="@+id/image_cni_register"
                        app:layout_constraintTop_toBottomOf="@+id/image_cni_register"
                        app:lib_setRadius="2dp"
                        app:lib_setRoundedBGColor="@color/defaultColorBlack_10"
                        app:lib_setRoundedBorderColor="@color/defaultColorBlack_10"
                        app:lib_setRoundedView="true"
                        app:lib_setShape="rectangle"
                        app:lib_setStrokeWidth="3dp" />

                    <com.theophrast.ui.widget.SquareImageView
                        android:id="@+id/image_profil_register"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/defaultColorWhite"
                        android:src="@drawable/profil"
                        android:scaleType="fitXY"
                        app:layout_constraintCircleRadius="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/text_link_profil_register_group"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/text_link_profil_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/text_link_profil_register_group" />

                    <RelativeLayout
                        android:id="@+id/spinner_code_phone_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="@+id/image_profil_register"
                        app:layout_constraintStart_toStartOf="@+id/image_profil_register"
                        app:layout_constraintTop_toBottomOf="@+id/image_profil_register">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_voip_gateway"
                            android:backgroundTint="@color/defaultColorGrayOpacity"/>

                        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                            android:id="@+id/spinner_code_phone_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/img1"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:spinnerMode="dialog"
                            app:smsp_isSearchable="true"
                            android:theme="@style/AppTheme"
                            app:smsp_arrowColor="@color/defaultColorWhite"
                            app:smsp_floatingLabelColor="@color/defaultColorWhite"
                            app:smsp_hintColor="@color/defaultColorWhite"
                            app:smsp_itemColor="@color/defaultColorWhite"
                            app:smsp_itemListColor="@color/defaultColorBlack"
                            app:smsp_itemListHintBackgroundColor="@color/colorPrimaryDark"
                            app:smsp_itemListHintColor="@color/defaultColorWhite"
                            app:smsp_selectedItemListColor="@color/colorPrimaryDark"
                            app:smsp_underlineColor="@color/defaultColorWhite"
                            app:smsp_floatingLabelText="@string/text_title_code_phone"
                            app:smsp_multilineError="false"
                            app:smsp_hint="@string/text_choose_code_phone"
                            app:smsp_underlineSize="1dp" />

                    </RelativeLayout>

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_phone_number_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/spinner_code_phone_register_group"
                        app:layout_constraintStart_toStartOf="@+id/spinner_code_phone_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/spinner_code_phone_register_group"
                        app:labelText="Enter your phone number"
                        app:iconSignifier="@drawable/ic_phone2"
                        android:foregroundTint="@color/defaultColorWhite"
                        app:secondaryColor="@color/defaultColorGray"
                        app:primaryColor="@color/defaultColorWhite">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/text_phone_number_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@color/defaultColorWhite"/>

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_password_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/text_phone_number_register_group"
                        app:layout_constraintStart_toStartOf="@+id/text_phone_number_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/text_phone_number_register_group"
                        app:labelText="Enter your password"
                        app:iconSignifier="@drawable/ic_password"
                        android:foregroundTint="@color/defaultColorWhite"
                        app:secondaryColor="@color/defaultColorGray"
                        app:primaryColor="@color/defaultColorWhite">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/text_password_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/defaultColorWhite"/>

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                        android:id="@+id/text_confirm_password_register_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="@+id/text_password_register_group"
                        app:layout_constraintStart_toStartOf="@+id/text_password_register_group"
                        app:layout_constraintTop_toBottomOf="@+id/text_password_register_group"
                        app:labelText="Confirm your password"
                        app:iconSignifier="@drawable/ic_password"
                        android:foregroundTint="@color/defaultColorWhite"
                        app:secondaryColor="@color/defaultColorGray"
                        app:primaryColor="@color/defaultColorWhite">

                        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                            android:id="@+id/text_confirm_password_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/defaultColorWhite"/>

                    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"
                        android:foregroundGravity="bottom"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_confirm_password_register_group">

                        <Button
                            android:id="@+id/btn_sign_in_register_member_part3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/btn_gradient_style"
                            android:drawableEnd="@drawable/ic_enter_2"
                            android:drawableTint="@color/defaultColorWhite"
                            android:padding="@dimen/size_padding_button_text"
                            android:text="@string/text_register"
                            android:textColor="@color/defaultColorWhite"
                            android:textSize="@dimen/size_button_text" />

                        <Button
                            android:id="@+id/btn_prev_register_member_part3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/gradient_button"
                            android:drawableStart="@drawable/ic_angle_double_left"
                            android:drawableTint="@color/defaultColorWhite"
                            android:padding="@dimen/size_padding_button_text"
                            android:text="Preview"
                            android:textColor="@color/defaultColorWhite"
                            android:textSize="@dimen/size_button_text" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

