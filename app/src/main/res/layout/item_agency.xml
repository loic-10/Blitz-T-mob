<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/size_radius_button">

        <RelativeLayout
            android:id="@+id/linearLayoutUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_account_all_style">

            <LinearLayout
                android:id="@+id/info_agency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/text_ville_quartier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Douala, Bonamoussadi"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableStart="@drawable/ic_related_companies"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/text_heure_debut_fin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:ellipsize="end"
                    android:text="08h - 17h30"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_clock_checked"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/defaultColorBlack"/>

                <TextView
                    android:id="@+id/text_position_geographique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Douala derriere la station centrale de bonamoussadi"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="16sp"
                    android:fitsSystemWindows="true"
                    android:drawableStart="@drawable/ic_place_marker"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/defaultColorBlack"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/phone_agence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_agency"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="-11dp"
                    android:layout_toStartOf="@+id/text_telephone"
                    android:background="@drawable/white_2_raduis_info"
                    android:padding="15dp"
                    android:paddingEnd="30dp"
                    android:text="Telephone"
                    android:textAlignment="center"
                    android:textColor="@color/defaultColorBlack"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/defaultColorBlack"/>

                <TextView
                    android:id="@+id/text_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/blue_2_radius_info"
                    android:padding="15dp"
                    android:text="+237 690 901 011"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/defaultColorWhite"
                    android:drawableStart="@drawable/ic_keypad"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/defaultColorWhite"/>
            </RelativeLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>